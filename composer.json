	"sms-php",
	"altiria",
	"enviar-sms",
	"envio-de-sms",
	"envio-sms",
	"sms-transaccional",
	"sms-pasarela"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Altiria",
            "email": "soporte@altiria.com",
